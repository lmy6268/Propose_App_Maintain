<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProPoseApplication" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pp_green</item>
        <item name="colorPrimaryVariant">@color/pp_green</item>
        <item name="colorOnPrimary">@color/pp_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pp_black</item>
        <item name="colorSecondaryVariant">@color/pp_black</item>
        <item name="colorOnSecondary">@color/pp_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProPoseApplication.YesActionBar" parent="Theme.AppCompat.Light">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pp_green</item>
        <item name="colorPrimaryVariant">@color/pp_green</item>
        <item name="colorOnPrimary">@color/pp_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pp_black</item>
        <item name="colorSecondaryVariant">@color/pp_black</item>
        <item name="colorOnSecondary">@color/pp_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>




    <!--Don't show SplashScreen over OS 12-->
    <style name="Theme.AppCompat.Starting" parent="Theme.SplashScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="postSplashScreenTheme">@style/Theme.ProPoseApplication</item>
    </style>
</resources>